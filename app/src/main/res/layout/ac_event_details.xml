<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

    <com.ls.drupalconapp.ui.view.NotifyingScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textColor="@android:color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:background="@drawable/event_details_header">
                </ImageView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.4"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_details_header_shadow">
                </ImageView>
            </FrameLayout>

            <!--Don't remove android:background="@android:color/white" from this view-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

                <FrameLayout
                    android:id="@+id/holderTrack"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/secondary"
                    android:paddingTop="21dp"
                    android:paddingBottom="22dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.ls.drupalconapp.ui.view.BoldFontTextView
                            android:id="@+id/txtEventName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@android:color/white"/>

                        <com.ls.drupalconapp.ui.view.RegularFontTextView
                            android:id="@+id/label_where"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtEventName"
                            android:paddingTop="8dip"
                            android:layout_alignParentBottom="true"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/white_semi_transparent"/>
                    </RelativeLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_exp_track"
                    android:layout_below="@+id/holderTrack">

                    <LinearLayout
                        android:id="@+id/layout_level_track"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="21dp"
                        android:paddingBottom="21dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <com.ls.drupalconapp.ui.view.MediumFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtTrack"
                            android:textColor="#333333"
                            android:textSize="@dimen/text_size_15"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_marginTop="3dp"
                            android:id="@+id/layoutExpLevel"
                            android:orientation="horizontal">

                            <com.ls.drupalconapp.ui.view.MediumFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:id="@+id/txtExpLevel"
                                android:textColor="#333333"
                                android:textSize="@dimen/text_size_15"/>

                            <ImageView
                                android:id="@+id/imgExperience"
                                android:layout_marginLeft="8dp"
                                android:adjustViewBounds="true"
                                android:layout_gravity="top"
                                android:layout_width="17dp"
                                android:layout_height="17dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/topDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="72dp"
                        android:layout_gravity="bottom|right"
                        android:background="@color/white_200"/>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/holderSpeakers"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/layout_exp_track"
                    android:background="@android:color/white"/>

                <View
                    android:id="@+id/bottomDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="72dp"
                    android:layout_above="@+id/webViewDescription"
                    android:layout_alignParentRight="true"
                    android:background="@color/white_200"/>

                <View
                    android:id="@+id/generalDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="72dp"
                    android:layout_above="@+id/webViewDescription"
                    android:layout_alignParentRight="true"
                    android:background="@color/white_200"/>

                <FrameLayout
                    android:layout_below="@+id/holderSpeakers"
                    android:id="@+id/webViewDescription"
                    android:paddingTop="16dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <WebView
                        android:id="@+id/webView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <com.dd.ShadowLayout
                    android:layout_below="@+id/holderTrack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:sl_shadowRadius="2dp"
                    app:sl_shadowColor="#AA000000"
                    app:sl_dx="0dp"
                    app:sl_dy="0.5dp"
                    app:sl_cornerRadius="56dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="-25dp">

                    <RelativeLayout
                        android:id="@+id/layoutFavorite"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_favorite">

                        <CheckBox
                            android:id="@+id/checkBoxFavorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:background="@drawable/selector_favorite"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:clickable="false"/>
                    </RelativeLayout>
                </com.dd.ShadowLayout>

                <ImageView
                    android:id="@+id/imgEmptyView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@drawable/ic_no_details"
                    android:layout_below="@+id/holderTrack"
                    android:layout_marginTop="56dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </LinearLayout>
    </com.ls.drupalconapp.ui.view.NotifyingScrollView>

    <RelativeLayout
        android:id="@+id/layoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/viewToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_statusbar_height"
            android:background="@color/secondary"
            android:visibility="visible"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_shadow_height"
            android:background="@drawable/bg_shadow_top">
        </ImageView>

        <View
            android:id="@+id/viewStatusBarTrans"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/black_40_trans"
            android:visibility="gone"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewStatusBarTrans"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="DrupalCon"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:singleLine="true"/>
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"/>

</RelativeLayout>